<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".ControlBtActivity" >

    <Button
        android:id="@+id/button3bt_control_activity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:onClick="return_to_first_activity"
        android:text="@string/go_out"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/textView1bt_control_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button5bt_control_activity"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:text="@string/free"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/button5bt_control_activity"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1bt_control_activity"
        android:layout_alignLeft="@+id/button1bt_control_activity"
        android:layout_marginBottom="40dp"
        android:onClick="verify_sensor"
        android:text="@string/verify_eeg"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/button4bt_control_activity"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3bt_control_activity"
        android:layout_alignLeft="@+id/button2bt_control_activity"
        android:layout_marginBottom="130dp"
        android:onClick="command_save"
        android:text="@string/send_data"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/button2bt_control_activity"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4bt_control_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:onClick="command_cancel"
        android:text="@string/cancel_eeg"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/button1bt_control_activity"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2bt_control_activity"
        android:layout_alignLeft="@+id/button2bt_control_activity"
        android:layout_marginBottom="40dp"
        android:onClick="command_capture"
        android:text="@string/capture_eeg"
        android:textColor="@color/text_color" />

</RelativeLayout>
