<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="view_eeg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background" 
    tools:context=".NeuroActivity" >

    <TextView
        android:id="@+id/textView1neuro_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:text="@string/name_file"
        android:textSize="@dimen/dimension_text_xlarge" />

    <TextView
        android:id="@+id/textView2neuro_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1neuro_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/no_file_upload"
        android:textSize="@dimen/dimension_text_uri" />

    <Button
        android:id="@+id/button1neuro_activity"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2neuro_activity"
        android:layout_centerVertical="true"
        android:onClick="search_file"
        android:text="@string/search_file" />

    <Button
        android:id="@+id/button2neuro_activity"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1neuro_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="capture_data"
        android:text="@string/capture_data" />

    <Button
        android:id="@+id/button3neuro_activity"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2neuro_activity"
        android:layout_alignRight="@+id/button1neuro_activity"
        android:layout_below="@+id/button2neuro_activity"
        android:layout_marginTop="50dp"
        android:onClick="view_eeg"
        android:text="@string/view_file" />

</RelativeLayout>