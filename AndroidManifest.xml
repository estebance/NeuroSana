<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.module.neurosana"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo">
        <activity
            android:name="com.module.neurosana.NeuroActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="org.neurosana.eegfile"/>;
            </intent-filter>         
        </activity>
        <activity
            android:name="com.module.neurosana.ListFilesActivity"
            android:label="@string/title_activity_list_files" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.module.neurosana.BtListActivity"
            android:label="@string/title_activity_bt_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.module.neurosana.ControlBtActivity"
            android:label="@string/title_activity_control_bt" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.module.neurosana.ChartActivity"
            android:label="@string/title_activity_chart" 
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
